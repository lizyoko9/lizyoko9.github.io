---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
	<article class="prose prose-lg dark:prose-invert mx-auto prose-headings:font-bold prose-a:text-primary-600 dark:prose-a:text-primary-400 hover:prose-a:text-primary-500 prose-img:rounded-xl prose-pre:bg-gray-900 prose-pre:border prose-pre:border-gray-700">
		<div class="mb-8 text-center not-prose">
            <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight mb-4">{post.data.title}</h1>
            <div class="text-gray-500 dark:text-gray-400 font-mono text-sm">
                <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('zh-CN', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                    })}
                </time>
            </div>
        </div>
        
        {post.data.heroImage && <img width={1020} height={510} src={post.data.heroImage} alt="" class="w-full h-auto rounded-xl shadow-md mb-8" />}
        
		<Content />
	</article>
</Layout>
