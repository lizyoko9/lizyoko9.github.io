---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="文章 | Lizlog" description="所有文章归档">
    <section>
        <h1 class="text-3xl font-bold mb-8">所有文章</h1>
        <div class="space-y-8">
            {posts.map((post) => (
                <article class="border-b border-gray-200 dark:border-gray-800 pb-8 last:border-0">
                    <div class="text-gray-500 dark:text-gray-400 text-sm mb-2 font-mono">
                        {post.data.pubDate.toLocaleDateString('zh-CN', {
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric',
                        })}
                    </div>
                    <h2 class="text-2xl font-bold mb-2">
                        <a href={`/blog/${post.slug}/`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                            {post.data.title}
                        </a>
                    </h2>
                    <p class="text-gray-600 dark:text-gray-400 mb-4">
                        {post.data.description}
                    </p>
                    <a href={`/blog/${post.slug}/`} class="text-primary-600 dark:text-primary-400 hover:underline font-medium inline-flex items-center">
                        阅读全文 <span class="ml-1">&rarr;</span>
                    </a>
                </article>
            ))}
        </div>
    </section>
</Layout>
